TYPEMAP

# basic C types
vbi_bool		T_BOOL
vbi_pgno		T_IV
vbi_subno		T_IV
vbi_nuid		T_UV
vbi_page_type		T_ENUM
vbi_pixfmt		T_IV
const char *		T_PV
int64_t                 T_IV
VBI_CHN_PRIO		T_IV
VBI_CAPTURE_FD_FLAGS	T_IV

# objects
# (for some reason the INPUT/OUTPUT definitions are not found if the type name has more than 2 chars)
VbiProxyObj *		PO
VbiCaptureObj *		PO
VbiVtObj *		PO
VbiRawDecObj *		PO
VbiExportObj *		PO
VbiSearchObj *		PO
VbiPageObj *		PO
VbiDvbDemuxObj *	PO
VbiIdlDemuxObj *	PO
VbiPfcDemuxObj *	PO
VbiXdsDemuxObj *	PO

# plain pointer
VbiRawBuffer *		T_PTROBJ
VbiSlicedBuffer *	T_PTROBJ

#############################################################################
INPUT

PV
        if (SvOK($arg)) {
            $var = $arg;
        }
        else
            Perl_croak(aTHX_ \"$var is not a scalar\")

PO
        if (sv_derived_from($arg, \"${(my $ntt=$ntype)=~s/Vbi(.*)Obj.*/Video::Capture::ZVBI::\L$1/;\$ntt}\")) {
            IV tmp = SvIV((SV*)SvRV($arg));
            $var = INT2PTR($type,tmp);
        }
        else
            Perl_croak(aTHX_ \"$var is not of type ${ntype}\")

#############################################################################
OUTPUT

PV
        $arg = $var;

PO
        sv_setref_pv($arg, \"${(my $ntt=$ntype)=~s/Vbi(.*)(Obj|Ref).*/Video::Capture::ZVBI::\L$1/;\$ntt}\", (void*)$var);

